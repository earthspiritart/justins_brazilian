<%= form_for(@recipe) do |f| %>
<fieldset>
<%= f.label :title %>
  <%= f.text_field :title %>
<section>
  <%= f.label :description %>
  <%= f.text_field :description %>
</section>
<section>
  <%= f.label :cook_time %>
  <%= f.text_field :cook_time %>s
</section>
<section>
  <%= f.label :instructions %>
  <%= f.text_field :instructions %>
</section>
<section>
  <%= f.label :picture %>
  <%= f.text_field :picture %>
</section>
<section>
  <%= f.label :ingredients %>
  <%= f.text_field :ingredients %>
</section>



<%= f.submit("save") %>
</fieldset>

<% end %> 